                <td>{{ D.dateDemande ? D.dateDemande|date('Y-m-d') : '' }}</td>
                <td>{{ D.dateConfirmation ? D.dateConfirmation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ D.typeEchange }}</td>
